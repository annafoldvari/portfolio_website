extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Let's make the web great together!

      p.lead.text-light
        | This is my portfolio website written with Node.js, Express and Pug.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

    each project in projects  
      .cell
        a(href=`/project/${project['id']}`)
          img.thumbnail(src=`/static/images/project${project['id'] + 1}/image1.png`)
          h5= `${project['project_name']}`
      
